{
  "$schema": "https://json.schemastore.org/swcrc",
  "module": {
    "type": "es6",
    "resolveFully": true
  },
  "env": {
    "targets": {
      "node": "21"
    }
  },
  "jsc": {
    "experimental": {
      "plugins": []
    },
    "externalHelpers": true,
    "loose": true,
    "parser": {
      "syntax": "typescript",
      "tsx": true,
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "decoratorMetadata": true
    },
    "baseUrl": ".",
    "paths": {
      "#/*": [
        "src/*"
      ]
    }
  }
}